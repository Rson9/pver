pkgname=pver
pkgver=0.0.1
pkgrel=1
pkgdesc="轻量级 Python 虚拟环境管理 CLI 工具"
arch=('x86_64')
url="https://github.com/Rson9/pver"
license=('MIT')
depends=('python')
makedepends=('go')
source=("https://github.com/Rson9/pver/releases/download/v${pkgver}/pver-v${pkgver}.tar.gz")
sha256sums=('SKIP')

build() {
  cd "$srcdir/pver-v${pkgver}"
  go build -o pver -ldflags="-s -w" main.go
}

package() {
  cd "$srcdir/pver-v${pkgver}"
  install -Dm755 pver "$pkgdir/usr/bin/pver"
  install -Dm644 README.md "$pkgdir/usr/share/doc/${pkgname}/README.md"
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/${pkgname}/LICENSE"
}
